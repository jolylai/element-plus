{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jsdom", "unplugin-vue-define-options"]
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
